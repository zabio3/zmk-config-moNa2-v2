#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <8>;  
        columns = <7>; 
                                                                    //  assuming your right board looks like this: (given the corrected matrix in /matrix.txt)
                                                                    //          RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
                                                                    //  RC(1,0) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(3,0)
                                                                    //  RC(2,0) RC(2,1) RC(2,3) RC(2,4) RC(2,5) RC(3,1)
                                                                    //  RC(3,5) RC(3,4)                         RC(3,2)
                                                                    //  offset rows by 4 for this side. (set row offset in right overlay)                                                                              
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)             RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)     RC(5,0) RC(5,2) RC(5,3) RC(5,4) RC(5,5) RC(7,0)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)     RC(6,0) RC(6,1) RC(6,3) RC(6,4) RC(6,5) RC(7,1)
                    RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6)     RC(7,5) RC(7,4)                         RC(7,2)         
        >;
    };
    
    kscan0: kscan {

    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <10>;
    };
};